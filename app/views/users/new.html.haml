= render 'shared/header'

.country-name
  %h3
    Register
%section.register_container
  .row.panel.radius
    .small-4.column
      .p
        = form_for(@user) do |f|
          = f.email_field :email, label: false, :placeholder => 'Please enter your email address'
          = f.password_field :password, label: false, :placeholder => 'Please enter your password'
          = f.submit "Register", :class => 'small button custom radius'