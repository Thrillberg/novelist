#header
%h2#title
  - if current_user
    = link_to "Novelist", home_path
  - else
    = link_to "Novelist", root_path

#header-buttons   
  - if current_user
    %ul
      %li
        = form_tag("/books/search", method: "post", :id => 's') do 
          = text_field_tag :search_term, nil, :placeholder => "Search by title or country"
          = button_tag " Search", class: "fi-eye button small radius custom"

      %li= link_to " My Queue", my_queue_path, class: "fi-list button small radius custom"
      %li= link_to " Sign Out", sign_out_path, method: :delete, class: 'fi-power button alert small radius'